<h1>Home Page</h1>

<% if current_user %>
	<h1><%= current_user.username %></h1>
<% end %>

<% @movies.each_slice(3) do |slice| %>
    <div class="row">
    <% slice.each do |movie| %>
        <div class="col-md-4 movie">
            <a href="/movies/<%= movie.id %>"><br>
            <h2><%= movie.title %></h2></a>
        </div>
    <% end %>
    </div>
<% end %>

